!-----URxvt settings-----!
URxvt*perl-ext-common: default,clipboard,vtwheel,matcher,tabbedex
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt*buffered: true
URxvt.scrollBar: false
URxvt*cursorBlink: false
URxvt*depth: 32
URxvt*borderless: 1
URxvt*loginShell: true
Urxvt*secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
URxvt*saveLines: 5000
URxvt.intensityStyles: false
URxvt*underlineColor: #268bd2

! get cut/paste to work
URxvt.iso14755: false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

! disable drawing glyphs
URxvt*skipBuiltinGlyphs:    true

!-- Xft settings -- !
Xft.dpi:        113
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault

! -- Fonts -- !
URxvt.font:xft:Inconsolata:size=10, xft:DejaVu Sans Mono:style=Book:antialias=false:size=9
URxvt.boldfont:xft:Inconsolata:style=Bold:size=10, xft:DejaVu Sans Mono:style=Bold:antialias=false:size=9

URxvt.scrollWithBuffer: true
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true

!!Keybindings : Make ctrl-arrow work
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

!-----Xterm settings-----!
xterm*faceName:xft:Inconsolata
xterm*faceSize: 10

