!-----URxvt settings-----!
URxvt.perl-ext:
URxvt.perl-ext-common:
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt*buffered: true
URxvt.scrollBar: false
URxvt*cursorBlink: false
URxvt*depth: 32
URxvt*borderless: 1
URxvt*loginShell: true
Urxvt*secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
URxvt*saveLines: 5000
URxvt.intensityStyles: false
URxvt*underlineColor: #777777
!URxvt.letterSpace: -1

! get cut/paste to work
URxvt.iso14755: false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

! disable drawing glyphs
URxvt*skipBuiltinGlyphs:    true

!-- Xft settings -- !
!Xft.dpi:        112
Xft.autohint:   0
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault

! -- Fonts -- !
!URxvt*font: xft:Source Code Pro:size=10, xft:FontAwesome, -wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1
!URxvt*boldFont: xft:Source Code Pro:style=Bold:size=10, xft:FontAwesome, -wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1
URxvt*font: -*-tamsyn-medium-r-*-*-16-*-*-*-*-*-*-*, xft:FontAwesome, -wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1, xft:DejaVu Sans Mono:style=Book:size=9
URxvt*boldFont: -*-tamsyn-bold-r-*-*-16-*-*-*-*-*-*-*, -wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1, xft:DejaVu Sans Mono:style=Bold:size=9
!URxvt*italicFont:  xft:Bitstream Vera Sans Mono:italic:autohint=true:pixelsize=12
!URxvt*boldItalicFont:  xft:Bitstream Vera Sans Mono:bold:italic:autohint=true:pixelsize=12
URxvt.scrollWithBuffer: true
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true

!!Keybindings : Make ctrl-arrow work
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

!-----Xterm settings-----!
xterm*faceName:-*-tamsyn-medium-r-*-*-16-*-*-*-*-*-*-*
!xterm*faceSize:10

